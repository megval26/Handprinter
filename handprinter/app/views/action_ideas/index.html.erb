<section id="action-ideas-index">

<h1>Listing Action Ideas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>References</th>
      <th>Category</th>
      <!-- <th>Tags</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @action_ideas.each do |action_idea| %>
      <tr>
        <td><%= action_idea.name%></td>
        <td><%= action_idea.description%></td>
        <td><%= link_to action_idea.references, action_idea.references%></td>
        <td><%= action_idea.category %></td>
        <td><%#= action_idea.date_created %></td>
        <td><%#= action_idea.tags %></td>
        <td><%#= link_to 'Show', action_idea,  class: "btn btn-custom btn-block" %></td>
        <td><%#= link_to 'Edit', edit_action_idea_path(action_idea) %></td>
        <td><%#= link_to 'Destroy', action_idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Create Model', new_model_path, class: "btn btn-custom btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</section>

<br>

